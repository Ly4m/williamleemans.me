---
import "../styles/global.css";
import "@fontsource/space-grotesk";
import "@fontsource/ibm-plex-mono";
import SideNav from "../components/SideNav.astro";
import { ClientRouter } from "astro:transitions";
import EmberBackground from "../components/EmberBackground.svelte";
import TwitterMeta from "../components/meta/TwitterMeta.astro";
import OpenGraphMeta from "../components/meta/OpenGraphMeta.astro";

type Props = {
  title?: string;
  description?: string;
  ogImage?: string;
  noindex?: boolean;
  lang?: string;
  structuredData?: string;
};

const {
  title = "William Leemans",
  description = "Hi, Iâ€™m William Leemans! Entrepreneur, software architect, and Jetdev CTO. I craft clean solutions, mentor developers, and love building useful products.",
  ogImage = "/og/default.jpg",
  noindex = false,
  lang = "en",
  structuredData,
} = Astro.props;

const nav = [
  { label: "Home", href: "/" },
  { label: "Blog", href: "/blog" },
  { label: "Now", href: "/now" },
];

const site = Astro.site?.toString() ?? "https://williamleemans.me";
const canonical = new URL(Astro.url.pathname, site).toString();
---

<!doctype html>
<html
  lang={lang}
  class="h-full scroll-smooth"
  transition:name="root"
  transition:animate="initial"
>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />

    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical} />

    <!-- Privacy-friendly analytics by Plausible -->
    <script async src="https://plausible.io/js/pa-QovbWITZik5-tHtN9XgGD.js"></script>
    <script>
      window.plausible=window.plausible||function(){(plausible.q=plausible.q||[]).push(arguments)},plausible.init=plausible.init||function(i){plausible.o=i||{}};
      plausible.init()
    </script>


    <!-- Robots -->
    <meta
      name="robots"
      content={noindex ? "noindex, nofollow" : "index, follow"}
    />

    <OpenGraphMeta
      title={title}
      description={description}
      canonical={canonical}
      ogImage={ogImage}
    />

    <TwitterMeta title={title} description={description} image={ogImage} />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <ClientRouter />
  </head>
  <body class="bg-primary-100 h-full min-h-screen antialiased">
    <EmberBackground client:load />

    <!-- Content area -->
    <div class="flex min-h-screen">
      <SideNav items={nav} />

      <main class="w-full md:ml-24">
        <div class="h-14 md:h-0"></div>
        <div
          class="mx-auto max-w-4xl px-4 py-8 sm:px-6 md:px-10 md:py-12 lg:py-16"
        >
          <slot />
        </div>
      </main>
    </div>
  </body>
</html>
